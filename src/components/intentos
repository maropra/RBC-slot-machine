getRandom = () => {
    let arr = [];
    while (arr.length < 3) {
        var r = Math.floor(Math.random() * (4 - 1) + 1);
        if (arr.indexOf(r) === -1) {
            arr.push(r);
        }
        return arr;
    }
    //devuelve un array con 3 numero al azar

    gerenateRandomIcons = () => {
        results = this.getRandom().map(num => {
            if (num === 1) {
                num = 'ğŸ•'
            } else if (num === 2) {
                num = 'ğŸ”'
            } else {
                num = 'ğŸŸ'
            }
        })
        return results
    }
  //Devuelve un array con 3 figuritas

